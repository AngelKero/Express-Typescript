{
  "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "target": "es6",
      "noImplicitAny": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "build/",
      "baseUrl": "app/",
      "paths": {
          "*": [
              "node_modules/*"
          ]
      }
  },
  "include": [
    "app/**/*"
  ]
}
